<main>
    <div class="shop-section">
        <div class="login container mt-5 mb-5 shadow">
            <div class="row">
                <div class="col-lg-6 blue">
                    <div class="side-box">
                        <div class="context text-center">
                            <h3 class="pb-3 fw-bold">New to our website?</h3>
                            <p class="pb-4">Join us now</p>
                            <a href="/auth/register">Create an Account</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="login-box my-5 py-2">
                        <h3 class="text-uppercase text-center mb-5 fw-bold">Log in to enter</h3>
                        <form method="post" class="row login-form mx-auto">
                            {{#if message}}
                            <div class="col=md-12 mb-3">
                                <div class="error">
                                    <i class="fas fa-times-circle me-2"></i>
                                    <span>{{message}}</span>
                                </div>
                            </div>
                            {{/if}}
                            <div class="col-md-12 mb-3">
                                <input class="form-control" type="text" name="username" placeholder="Username" />
                            </div>
                            <div class="col-md-12 mb-3">
                                <input class="form-control" type="password" name="password" placeholder="Password" />
                            </div>
                            <div class="col-md-12 mb-3">
                                <input class="form-check-input m-1" type="checkbox" id="keep-logged" />
                                <label class="form-check-label" htmlFor="keep-logged">Keep me logged in</label>
                            </div>
                            <div class="col-md-12 mb-3 text-center">
                                <input class="form-control mb-2" type="submit" value="Log In" />
                                <a href="/">Forgot Password?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>